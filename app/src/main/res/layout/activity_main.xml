<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="11"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Credit Card Helper"

            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:background="@color/gray"
            android:textSize="13dp"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_weight="0.05" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Card Balance ($)"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:textSize="13dp"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_weight="0.80" />

        <EditText
            android:id="@+id/edittext"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text"
            android:inputType="text"
            android:layout_weight="0.09" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Yarly Interest Rate(%)"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:textSize="13dp"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_weight="0.71" />


        <EditText
            android:id="@+id/edittext2"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text"
            android:inputType="text"
            android:layout_weight="0.17" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Minimum Payment($)"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:textSize="13dp"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_weight="0.71" />


        <EditText
            android:id="@+id/edittext3"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text"
            android:inputType="text"
            android:layout_weight="0.17" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:weightSum="1">

    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Final Card Balance($)"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:textSize="13dp"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_weight="0.71" />


        <EditText
            android:id="@+id/edittext4"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text"
            android:inputType="text"
            android:layout_weight="0.17" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Months Remaining"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:textSize="13dp"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_weight="0.71" />


        <EditText
            android:id="@+id/edittext5"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text"
            android:inputType="text"
            android:layout_weight="0.17" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Interest Paid Will Be($)"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:textSize="13dp"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_weight="0.71" />


        <EditText
            android:id="@+id/edittext6"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text"
            android:inputType="text"
            android:layout_weight="0.17" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:weightSum="1">

    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:weightSum="1">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"



            android:text="@string/show_the_text" />




    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:weightSum="1">

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CLEAR" />




    </LinearLayout>

    </LinearLayout>